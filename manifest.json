{
	"manifest_version" : 2,
	"name" : "Tab Switcher",
	"version": "1.0",
	"background" : {
		"scripts": ["background.js"]
	},
	"browser_action": {
			"default_icon": "icon.png"
		},
	"permissions": [
          "tabs"
        ],

	"description" : "Change tabs using the arrow keys",
	"commands" : {
		"switch-tab-right": {
			"suggested_key": {
				"default": "Ctrl+Right",
				"mac": "MacCtrl+Right"
			},
		"description": "move current tab to the right",
		"global": true
		},
		"switch-tab-left": {
			"suggested_key": {
				"default": "Ctrl+Left",
				"mac": "MacCtrl+Left"
			},
		"description": "move current tab to the left",
		"global": true
		}
	}
}
